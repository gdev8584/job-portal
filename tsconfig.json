{
  "compilerOptions": {
    "target": "ES2020",                     // Modern Node.js features
    "module": "commonjs",                   // For compatibility with most setups
    "esModuleInterop": true,                // Allows default imports from CommonJS modules
    "moduleResolution": "node",             // Node.js resolution strategy
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",                       // Output directory for compiled JS
    "rootDir": "src",                       // Source directory
    "resolveJsonModule": true,             // If you import JSON files
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],                       // Folder where your `.ts` files are
  "exclude": ["node_modules", "dist"]       // Avoid unnecessary files
}
